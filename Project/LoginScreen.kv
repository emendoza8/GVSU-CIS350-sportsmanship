<LoginScreen>:
    id: loginScreen
    name: 'loginScreen'
    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: 'SportsmanShip Fantasy Football'
            halign: 'center'
            pos_hint: {'center_x': .5, 'center_y': 1}
            left_action_items: [['menu']]

        MDBoxLayout:
            orientation: 'horizontal'
            MDTextFieldRect:
                id: teamname
                hint_text: 'Enter Team Name:'
                mode: 'rectangle'
                max_text_length: 20
                size_hint:.5,.15
                multiline: False

            MDFillRoundFlatButton:
                text: 'Save'
                on_press:
                    
        MDFloatLayout:

            MDFillRoundFlatButton:
                text: 'Ready to Draft'
                halign: 'center'
                pos_hint: {'center_x': .5, 'center_y': .1}
                on_release:
                    root.manager.current = 'draftScreen'
