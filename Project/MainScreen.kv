                            text: 'Resources:'
                        MDBoxLayout:
                            orientation: 'horizontal'
                            MDFloatLayout:
                                MDFillRoundFlatButton:
                                    halign: 'center'
                                    pos_hint: {'center_x': .2, 'center_y': .5}
