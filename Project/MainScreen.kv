#Creates the MainMenu screen and holds the properties on that screen such as layout,buttons,tabs,etc
#Each id can be used to reference that Kivy object in the python class to change properties
<MainMenu>:
    name: 'mainMenu'
    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:
            id: toolbar
            title: 'Team NoTeamName'
            halign: 'center'
            pos_hint: {'center_x': .5, 'center_y': 1}
            left_action_item: [['menu']]
        MDTabs:
            id: tabs
            Tab:
                text: 'Home'
                id: homeTab
                MDBoxLayout:
                    orientation: 'vertical'
                    MDBoxLayout:
                        orientation: 'vertical' 
                        MDLabel:
                            id: totalPoints
                            halign: 'center'
                            text:''
                        MDLabel:
