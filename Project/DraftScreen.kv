<DraftScreen>:
    name: 'draftScreen'
    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title:'Draft'
            halign: 'center'
            pos_hint: {'center_x': .5, 'center_y': 1}
        MDBoxLayout:
            orientation: 'horizontal'
            MDLabel:
                halign: 'center'
                pos_hint: {'center_x': .5, 'center_y': .5}
                text: 'Time left to draft:'
            MDLabel:
                halign: 'center'
                pos_hint: {'center_x': .5, 'center_y': .5}
                id: counter
                text: '30'
        MDBoxLayout:
            orientation: 'vertical'
            MDTextFieldRound:
                id: playerName
                hint_text: 'Search by players name:'
                mode: 'rectangle'
                halign: 'center'
                pos_hint: {'center_x': .5, 'center_y': .5}
                max_text_length: 20
                size_hint:.8,.2
                multiline: False
        
            MDBoxLayout:
                orientation: 'horizontal'
                ScrollView:
                    MDList:
                        id: container
                        divider: 'Full'
                        on_press:

                    
            
        MDFloatLayout:
            MDFillRoundFlatButton:
                text: 'Next'
                halign: 'center'
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_press:
                    root.manager.current = 'mainMenu'
            MDFillRoundFlatButton:
                text: 'Skip'
                halign: 'center'
                pos_hint: {'center_x': .8, 'center_y': .5}
                on_press:
                    root.manager.current = 'mainMenu'
